<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:padding="8dip" 
   android:background="@drawable/list_selector"
   >
   
    <com.beardedhen.androidbootstrap.FontAwesomeText
    android:id="@+id/img"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    fontawesometext:fa_icon="fa-laptop"
    android:layout_margin="5dp" 
    android:textSize="32sp"
	android:layout_alignParentLeft="true"
	android:layout_centerVertical="true"/>

    <TextView
       android:id="@+id/sub_id"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:paddingTop="10dp"
       android:textColor="#546fb4"
       android:text="ID Subscription">
    </TextView>
    
    <TextView
       android:id="@+id/sub_id_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:paddingBottom="10dp"
       android:layout_below="@id/sub_id"
       >
    </TextView>
    
    <TextView
       android:id="@+id/sub_requestedPublishingInterval"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:textColor="#546fb4"
       android:text="requestedPublishingInterval"
       android:layout_below="@id/sub_id_value" 
       >
    </TextView>
    
    <TextView
       android:id="@+id/sub_requestedPublishingInterval_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:layout_below="@id/sub_requestedPublishingInterval" 
       android:paddingBottom="10dp">
    </TextView>
    
    <TextView
       android:id="@+id/sub_requestedLifetimeCount"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:textColor="#546fb4"
       android:text="requestedLifetimeCount"
       android:layout_below="@id/sub_requestedPublishingInterval_value" 
       >
    </TextView>

    <TextView
       android:id="@+id/sub_requestedLifetimeCount_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/sub_requestedLifetimeCount" 
       android:layout_toRightOf="@id/img"
       android:textSize="11dp"
       android:paddingBottom="10dp">
    </TextView>
    
    <TextView
       android:id="@+id/sub_requestedMaxKeepAliveCount"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:textColor="#546fb4"
       android:text="requestedMaxKeepAliveCount"
       android:layout_below="@id/sub_requestedLifetimeCount_value" 
       >
    </TextView>
    
    <TextView
       android:id="@+id/sub_requestedMaxKeepAliveCount_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@id/img"
       android:layout_below="@id/sub_requestedMaxKeepAliveCount" 
       android:textSize="11dp"
       android:paddingBottom="10dp">
    </TextView>
    
    <TextView
       android:id="@+id/sub_maxNotificationsPerPublish"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:textColor="#546fb4"
       android:text="maxNotificationsPerPublish"
       android:layout_below="@id/sub_requestedMaxKeepAliveCount_value" 
       >
    </TextView>
    
    <TextView
       android:id="@+id/sub_maxNotificationsPerPublish_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@id/img"
       android:layout_below="@id/sub_maxNotificationsPerPublish" 
       android:textSize="11dp"
       android:paddingBottom="10dp">
    </TextView>

</RelativeLayout>