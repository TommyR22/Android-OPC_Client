<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:padding="8dip" 
   android:background="@drawable/list_selector"
   >
   
    <com.beardedhen.androidbootstrap.FontAwesomeText
    android:id="@+id/img"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    fontawesometext:fa_icon="fa-laptop"
    android:layout_margin="5dp" 
    android:textSize="32sp"
	android:layout_alignParentLeft="true"
	android:layout_centerVertical="true"/>

    <TextView
       android:id="@+id/id_M"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:paddingTop="10dp"
       android:textColor="#546fb4"
       android:text="ID Monitored Item">
    </TextView>
    
    <TextView
       android:id="@+id/id_M_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:paddingBottom="10dp"
       android:layout_below="@id/id_M"
       >
    </TextView>
    
    <TextView
       android:id="@+id/value_M"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:textColor="#546fb4"
       android:text="Value"
       android:layout_below="@id/id_M_value" 
       >
    </TextView>
    
    <TextView
       android:id="@+id/value_M_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:layout_below="@id/value_M" 
       android:paddingBottom="10dp">
    </TextView>
    
    <TextView
       android:id="@+id/status_M"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:textColor="#546fb4"
       android:text="Status"
       android:layout_below="@id/value_M_value" 
       >
    </TextView>

    <TextView
       android:id="@+id/status_M_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/status_M" 
       android:layout_toRightOf="@id/img"
       android:textSize="11dp"
       android:paddingBottom="10dp">
    </TextView>
    
    <TextView
       android:id="@+id/time_M"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="11dp"
       android:layout_toRightOf="@id/img"
       android:textColor="#546fb4"
       android:text="TimeStamp"
       android:layout_below="@id/status_M_value" 
       >
    </TextView>
    
    <TextView
       android:id="@+id/time_M_value"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@id/img"
       android:layout_below="@id/time_M" 
       android:textSize="11dp"
       android:paddingBottom="10dp">
    </TextView>
    
    

</RelativeLayout>